<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <com.kunulo.share_ifi.view.MyButton
        android:id="@+id/bt_unlock"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="#7F7F7F7F"
        android:text="@string/unlock" />

    <ImageView
        android:id="@+id/iv_restart_dingwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_restart_dingwei"
        android:layout_alignTop="@+id/bt_unlock"
        android:layout_alignBottom="@+id/bt_unlock"
        android:layout_marginLeft="15dp"
        android:padding="5dp"/>


    <include
        layout="@layout/title_bar" />

</RelativeLayout>
